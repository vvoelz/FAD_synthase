conda activate openff # this env has Ambertools and acpype
tleap -f build_FMN.leap
acpype -p FMN.prmtop -x FMN.crd -o gmx


# make gro of just FMN
cat ../../ModMonoLigMiliNterminal.pdb| grep " FMN " > FMN_fromMod.pdb

# convert to *.gro (in units nm)
gmx editconf -f FMN_fromMod.pdb -o FMN_fromMod.gro

